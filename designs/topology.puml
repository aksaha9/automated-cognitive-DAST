@startuml
!theme plain
skinparam componentStyle uml2

actor "User / CI/CD" as User
cloud "Google Cloud Platform" {
    package "Cloud Run Service" {
        [React Frontend] as UI
        [FastAPI Backend] as API
        [ZAP Engine] as ZAP
        
        UI -> API : HTTPS / REST
        API -> ZAP : ZAP API (localhost:8090)
    }

    component "Gemini 1.5 Pro" as LLM
    component "Cloud Storage" as GCS
}

node "Target App" as Target

User -> UI : Review & Control
API -> LLM : Analyze Intent (Prompt)
ZAP -> Target : DAST Scan (Spider/Active)
API -> GCS : Upload Reports (JSON/SARIF)

note right of ZAP
  Unified Container
  Shared Memory (4GB)
end note
@enduml
